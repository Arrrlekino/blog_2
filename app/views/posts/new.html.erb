<div class="row">
<div class="col-md-8">
<form action="/posts/create" method="POST">
  <div class="form-group">
    <label for="title">Title new post</label>
    <input type="text" name="post[title]" class="form-control">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Select tema</label>
    <select class="form-control" name="post[topic_id]">
      <% @topics.each do |topic| %>
        <option value="<%= topic.id %>"><%= topic.title %></option>
      <% end %>  
    </select>
  </div>
  <div class="form-group">
    <label>Text</label>
    <textarea name="post[body]" class="form-control" rows="10"></textarea>
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>